extends ../_layout.pug

block body
  .container
    .row.mb-4
      .col-md-6
        h1 New Article
    
    .row.blog-entries
      .col-md-12.col-lg-8.main-content
        form(method="post", enctype="multipart/form-data")
          .row
            .col-md-12.form-group
              label(for="title") Title
              input(type="text", name="title", value=articleTitle)#title.form-control
              
              if errors && errors.title
                small= errors.title

          .row
            .col-md-12.form-group
              label(for="content") Content
              textarea(name="content", cols="30", rows="20")#content.form-control= articleContent
              
              if errors && errors.content
                small= errors.content
          
          .row
            .col-md-12.form-group
              label(for="image") Image&nbsp;
              input(type="file", name="image").form-control

              if errors && errors.file
                small= errors.file

          .row
            .col-md-6.form-group
              input(type="submit", value="Create Article").btn.btn-primary

      include ../_components/sidebar
